<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F8EAD8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewBg"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:scaleType="fitXY"
            android:src="@drawable/top_background2"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Welcome Back"
                android:textColor="#DFA67B"
                android:textSize="100px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />
            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/name"
                android:textSize="23dp"
                android:textColorHint="#6D5D6E"
                android:textColor="#18122B"
                android:ems="10"
                android:hint=" Username"
                android:inputType="textPersonName"
                android:layout_marginTop="20px" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password"
                android:textSize="23dp"
                android:textColorHint="#6D5D6E"
                android:textColor="#18122B"
                android:ems="10"
                android:hint="  Passwork"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20px" />
            <ImageButton
                android:id="@+id/buttonControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/btn_arraw1">
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <Button
                android:id="@+id/btnFacebook"
                android:background="@drawable/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Facebook"
                android:drawableRight="@drawable/facebook"
                android:layout_margin="15dp"
                />
            <Button
                android:id="@+id/btnGoogle"
                android:background="@drawable/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Google"
                android:drawableRight="@drawable/google"
                android:layout_margin="15dp"
                />
        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/registerButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="57dp"-->
<!--            android:fontFamily="sans-serif-black"-->
<!--            android:text="Are you new user? Register"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="#6096B4"-->
<!--            android:textSize="19dp" />-->
    </LinearLayout>


</ScrollView>